# ApplySmart Backend Environment Configuration
# Copy this to .env and fill in your actual values

# Server Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production-12345

# Database Configuration (if using)
# DATABASE_URL=postgresql://user:password@localhost:5432/applysmart
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/applysmart

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
TEMP_FOLDER=temp

# JWT Configuration
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# SMS/OTP Configuration (for production)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# AWS Configuration (if using S3 for file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=applysmart-uploads
# AWS_REGION=us-east-1

# Email Configuration (for notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/applysmart.log

# OpenAI Configuration (for advanced AI features)
# OPENAI_API_KEY=your-api-key

# Google Authentication (if implementing OAuth)
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret